<h1>New transaction</h1>

<form {{action 'saveTransaction' on="submit"}} role="form" enctype="plain">
    <div class="form-group">
        <label for="name">Name</label>
        {{input type="text" name="Name" class="form-control" id="name" placeholder="Transaction Name" valueBinding="name"}}
    </div>
    <div class="form-group">
        <label for="amount">Amount</label>
        {{input type="text" name="amount" class="form-control" id="amount" placeholder="Amount" valueBinding="amount"}}
    </div>
    <div class="form-group">
        <label>Category</label>
        <select id="category" class="form-control">
            {{#each category in categories}}
                <option {{bind-attr value="category.id"}}>{{category.name}}</option>
            {{/each}}
        </select>
    </div>
    <button class="btn btn-info">Add transaction</button>
</form>