<div class="container">
    <div class="col-lg-12 col-sm-12">
        <h1>Category Details - <span {{bind-attr style=style}}>{{name}}</span></h1>

        <h2>Transactions</h2>
        <table class="table table-striped">
            <thead class="table-head">
            <tr>
                <td>Date</td>
                <td>Name</td>
                <td class="numberCell">Amount</td>
            </tr>
            </thead>
            <tbody>
            {{#each transaction in transactions}}
                <tr>
                    <td>{{formatDate transaction.createDate}}</td>
                    <td>{{transaction.name}}</td>
                    <td class="numberCell">{{formatAmount transaction.amount}}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>