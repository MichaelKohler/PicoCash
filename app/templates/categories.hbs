<div class="container">
    <div class="col-lg-12 col-sm-12">
        <h1>Categories</h1>

        <table class="table table-striped">
            <thead class="table-head">
            <tr>
                <td>Name</td>
                <td>Color</td>
                <td>Actions</td>
            </tr>
            </thead>
            <tbody>
            {{#each category in controller}}
                <tr>
                <td>{{#link-to 'category' category}}{{category.name}}{{/link-to}}</td>
                    <td {{bind-attr style=category.style}}>{{category.color}}</td>
                    <td><button class="btn btn-danger btn-xs" {{action 'deleteCategory' category.id}}>x</button></td>
                </tr>
            {{/each}}
            </tbody>
        </table>

        <h2>Add category</h2>
        <form role="form" {{action 'saveCategory' on="submit"}} enctype="plain">
            <div class="form-group">
                <label for="name">Name</label>
                {{input type="text" name="Name" class="form-control" id="name" placeholder="Category Name" valueBinding="name"}}
            </div>
            <div class="form-group">
                <label for="color">Color</label>
                {{input type="text" name="color" class="form-control" id="color" placeholder="Color like red or #ff0000" valueBinding="color"}}
            </div>
            <button class="btn btn-info">Add category</button>
        </form>
    </div>
</div>